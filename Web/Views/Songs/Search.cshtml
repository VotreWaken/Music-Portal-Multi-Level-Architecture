@model List<MusicPortal.Models.HomeModels.HomeAudioGenreModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<section>
    <div class="searchSection">
        <input class="searchInput" type="text" placeholder="Artists, songs, or podcasts">
        <button>
            <img src="~/src/img/AcceptUsers/Search.svg" alt="">
        </button>
    </div>

    <div class="ContentSection">

        <h1>Browse all</h1>
        <div class="Songs-Container">
        @foreach (var genreModel in Model)
        {
            @foreach (var item in genreModel.Songs)
            {
                <div class="ListeningHistoryItem">
                    <div class="LeftSide">
                        <img class="ListeningHistoryItemPlayIcon" src="/src/img/UserIndex/play.svg" alt="">
                        <img class="ListeningHistoryItemAlbumImage" src="@item.Path" alt="">

                        <div class="ListeningHistoryItemInformation">
                            <p>@item.Title</p>
                            <p>@item.Author</p>
                        </div>
                    </div>
                </div>
            }
        }
        </div>


    </div>
</section>