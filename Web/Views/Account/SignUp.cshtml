@model MusicPortal.Models.AccountModels.SignUp

@{
	ViewBag.Title = "Sign Up";
}

<form asp-action="SignUp" method="post" enctype="multipart/form-data">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<div class="form-group">
		<label asp-for="ImageAvatar">Choose Avatar:</label>
		<input asp-for="ImageAvatar" type="file" class="form-control" />
		<span asp-validation-for="ImageAvatar" class="text-danger"></span>
	</div>

	<div class="SignUpItem">
		@Html.LabelFor(model => model.Login)
		<input asp-for="Login" class="form-control" />
		<span asp-validation-for="Login" class="colorError" class="text-danger"></span>
	</div>



	<div class="SignUpItem">
		@Html.LabelFor(model => model.Password)
		<input asp-for="Password" class="form-control" />
		<span asp-validation-for="Password" class="colorError" class="text-danger"></span>
	</div>

	<div class="SignUpItem">
		<label asp-for="ConfirmPassword" class="control-label">ConfirmPassword</label>
		<input asp-for="ConfirmPassword" class="form-control" />
		<span asp-validation-for="ConfirmPassword	" class="colorError" class="text-danger"></span>
	</div>

	<button type="submit" id="signInBtnSumbmit">@PL.Resources.Resource.SignUp</button>

</form>