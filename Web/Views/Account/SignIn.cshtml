@model MusicPortal.Models.AccountModels.SignIn

@{
	ViewBag.Title = "Sign In";
}


<form asp-action="SignIn">
	<div asp-validation-summary="ModelOnly" class="text-danger"></div>
	<div class="SignUpItem">
		@Html.LabelFor(model => model.Login)
		<input asp-for="Login" class="form-control" />
		<span asp-validation-for="Login" class="colorError" class="text-danger"></span>
	</div>

	<div class="SignUpItem">
		@Html.LabelFor(model => model.Password)
		<input asp-for="Password" class="form-control" />
		<span asp-validation-for="Password" class="colorError" class="text-danger"></span>
	</div>

	<button type="submit" id="signInBtnSumbmit">@PL.Resources.Resource.SignIn</button>

</form>